<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<% if user_signed_in? %>
<div class="container mt-5">
    <div class="d-flex justify-content-center">
        <h1>Tambahkan Aktifitas Baru</h1>
    </div>
    <form action="/task/new" accept-charset="UTF-8" method="post">
        <input type="hidden" name="uid" value="<%= current_user.id %>">
        <div class="form-outline mb-3">
            <input type="text" id="form12" class="form-control" name="title" required/>
            <label class="form-label" for="form12">Title</label>
        </div>
        <div class="form-outline mb-3">
            <textarea class="form-control" id="textAreaExample" rows="4" name="desc" required></textarea>
            <label class="form-label" for="textAreaExample">Description</label>
        </div>
        <p>Batas</p>
        <div class="form-outline mb-3">
            <input type="datetime-local" id="birthdaytime" name="deadline" class="form-control">
        </div>
        <div class="d-flex justify-content-center gap-3">
            <button type="reset" class="btn btn-danger">Reset</button>
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>
</div>
<% else %>
<div class="container mt-5">
    <h1>Anda Harus Login Terlebih Dahulu</h1>
</div>
<% end %>
